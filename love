    <script>
        let attempts = 0;
        const music = document.getElementById('loveMusic');

        function moveNo() {
            const btn = document.getElementById('noBtn');
            const x = Math.random() * (window.innerWidth - 100);
            const y = Math.random() * (window.innerHeight - 50);
            btn.style.position = 'fixed';
            btn.style.left = x + 'px';
            btn.style.top = y + 'px';
            
            attempts++;
            if(attempts >= 2) {
                const yes = document.getElementById('yesBtn');
                yes.classList.add('show');
                document.getElementById('text').innerText = "–ù–∞–∂–º–∏ —Å—é–¥–∞! üëá‚ú®";
            }
        }

        function boom() {
            // –í–∫–ª—é—á–∞–µ–º –º—É–∑—ã–∫—É
            music.play();
            
            document.getElementById('card').style.display = 'none';
            document.getElementById('final').style.display = 'flex';
            
            const box = document.getElementById('heartBox');
            const icons = ['‚ù§Ô∏è', 'üß∏', 'üå∏', '‚ú®', 'üéÄ', 'üê•', 'üê∞'];
            const count = 180;

            for (let i = 0; i < count; i++) {
                const p = document.createElement('div');
                p.className = 'item';
                p.innerHTML = icons[Math.floor(Math.random() * icons.length)];
                p.style.left = '150px';
                p.style.top = '150px';
                p.style.opacity = '0';
                box.appendChild(p);

                const t = (i / count) * 2 * Math.PI;
                const x = 16 * Math.pow(Math.sin(t), 3) * 11 + 150;
                const y = -(13 * Math.cos(t) - 5 * Math.cos(2*t) - 2 * Math.cos(3*t) - Math.cos(4*t)) * 11 + 130;

                setTimeout(() => {
                    p.style.opacity = '1';
                    p.style.left = x + 'px';
                    p.style.top = y + 'px';
                    p.style.fontSize = (Math.random() * 15 + 15) + 'px';
                }, i * 8);
            }

            setTimeout(() => {
                const msg = document.getElementById('msg');
                msg.style.opacity = '1';
                msg.style.transition = 'opacity 2s ease';
                box.style.animation = 'pulse 2s infinite ease-in-out';
            }, 1800);
        }
    </script>
